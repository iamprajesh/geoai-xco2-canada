{
  "model_architecture": {
    "name": "ST-ViWT",
    "description": "Spatio-Temporal Vision Transformer with Wavelet Transform",
    "num_features": 31,
    "img_size": 64,
    "patch_size": 8,
    "num_layers": 6,
    "num_heads": 8,
    "hidden_dim": 256,
    "mlp_dim": 512,
    "dropout": 0.1
  },
  "training": {
    "batch_size": 32,
    "num_epochs": 100,
    "learning_rate": 0.0001,
    "weight_decay": 0.0001,
    "optimizer": "AdamW",
    "scheduler": "CosineAnnealingLR",
    "scheduler_params": {
      "T_max": 100,
      "eta_min": 1e-6
    }
  },
  "data": {
    "grid_resolution": 0.25,
    "lat_range": [41.0, 60.0],
    "lon_range": [-141.0, -52.0],
    "train_split": 0.8,
    "validation_split": 0.2,
    "random_seed": 42
  },
  "wavelet_transform": {
    "wavelet_type": "morl",
    "scales": 64,
    "sampling_period": 1.0
  },
  "auxiliary_features": [
    "temperature_2m",
    "total_precipitation_sum",
    "u_component_of_wind_10m",
    "v_component_of_wind_10m",
    "surface_pressure",
    "dewpoint_temperature_2m",
    "NDVI",
    "EVI",
    "elevation",
    "slope",
    "landcover",
    "crop_type"
  ],
  "gee_datasets": {
    "era5": {
      "collection": "ECMWF/ERA5_LAND/DAILY_AGGR",
      "bands": [
        "temperature_2m",
        "total_precipitation_sum",
        "u_component_of_wind_10m",
        "v_component_of_wind_10m",
        "surface_pressure",
        "dewpoint_temperature_2m"
      ]
    },
    "modis": {
      "collection": "MODIS/061/MOD13A1",
      "bands": ["NDVI", "EVI"],
      "scale_factor": 0.0001
    },
    "srtm": {
      "collection": "USGS/SRTMGL1_003",
      "bands": ["elevation"]
    },
    "esa_worldcover": {
      "collection": "ESA/WorldCover/v200",
      "bands": ["Map"]
    },
    "aafc": {
      "collection": "AAFC/ACI",
      "bands": ["landcover"]
    }
  },
  "device": "cuda",
  "num_workers": 4,
  "pin_memory": true,
  "mixed_precision": false
}
